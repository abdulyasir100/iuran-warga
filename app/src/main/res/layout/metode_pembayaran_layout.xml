<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetodePembayaran">

    <include
        android:id="@+id/metode_pembayaran_toolbar"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/trasferBankButton"
        android:layout_width="390dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/buttonwhite"
        android:elevation="5sp"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/transferBankText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="267dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/galano_grotesque_demo_bold"
            android:text="Transfer Bank"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/transferBankTextDesc"
            android:layout_width="349dp"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/galano_grotesque_demo_bold"
            android:text="Bayar iuran melalui bank ke rekening yang telah ditentukan"
            android:textColor="@color/blackAlpha"
            android:textSize="8sp" />

    </RelativeLayout>

</RelativeLayout>