<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110sp"
    android:background="@color/pureWhite"
    android:elevation="4sp"
    >

    <TextView
        android:id="@+id/pembayaran_iuran_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12sp"
        android:layout_marginTop="17sp"
        android:fontFamily="@font/galano_grotesque_demo_bold"
        android:text="Pembayaran Iuran"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tanggal_riwayat_pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/freeroad_regular"
        android:text="Tanggal Iuran"
        android:textColor="@color/blackAlpha" />

    <TextView
        android:id="@+id/total_riwayat_pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="69dp"
        android:text="Jumlah : Rp. 10.000,00"
        android:fontFamily="@font/galano_grotesque_demo_bold"
        />

</RelativeLayout>