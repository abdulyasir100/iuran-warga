<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbar_profile"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="#FFFDFD"
        android:elevation="10sp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="Tulis Postingan"
        android:paddingLeft="20sp"
        app:titleMarginStart="10sp"
        app:titleTextColor="#4199F5"
        app:logo="@drawable/ic_navigate_before"
        />

    <RelativeLayout
        android:layout_below="@id/tbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp">


        <EditText
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:lines="7"
            android:hint="Tulis Postingan"
            android:background="@drawable/border_style"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:padding="20sp"
            />

        <Button
            android:id="@+id/upload"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:layout_below="@id/post"
            android:background="@drawable/attach_button" />

        <Button
            android:layout_width="80sp"
            android:layout_height="50sp"
            android:layout_below="@id/post"
            android:layout_marginStart="210sp"
            android:layout_marginTop="10sp"
            android:layout_toEndOf="@+id/upload"
            android:text="Post"
            android:textColor="@color/pureWhite"
            android:background="@drawable/custom_button"
            />




    </RelativeLayout>



</RelativeLayout>