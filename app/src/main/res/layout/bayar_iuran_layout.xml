<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BayarIuran">

    <include
        android:id="@+id/pembayaran_toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/bayar_iuran_navbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/beranda_navbar" />

    <TextView
        android:id="@+id/bayar_iuran_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="302dp"
        android:layout_marginBottom="679dp"
        android:fontFamily="@font/freeroad_regular"
        android:text="Status Pebayaran"
        android:textColor="@color/pureWhite"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bayar_iuran_lunas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/freeroad_bold"
        android:text="Lunas"
        android:textColor="@color/pureWhite"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/bayar_iuran_tagihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/freeroad_regular"
        android:text="Total Iuran"
        android:textColor="@color/pureWhite"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bayar_iuran_uang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/freeroad_bold"
        android:text="Rp. 0,00"
        android:textColor="@color/pureWhite"
        android:textSize="13sp" />

    <Button
        android:id="@+id/tombolBayar"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="195dp"
        android:background="@drawable/buttonblue"
        android:elevation="5sp"
        android:fontFamily="@font/galano_grotesque_demo_bold"
        android:text="Bayar"
        android:textAllCaps="false"
        android:textColor="@color/pureWhite" />

    <Button
        android:id="@+id/tombolRiwayat"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="262dp"
        android:background="@drawable/buttonwhite"
        android:elevation="5sp"
        android:fontFamily="@font/galano_grotesque_demo_bold"
        android:text="Riwayat Pembayaran"
        android:textAllCaps="false" />

</RelativeLayout>